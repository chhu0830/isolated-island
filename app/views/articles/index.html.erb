<script>
$(document).ready(function(){
    $('.back').hide(); //back是咖啡背景字
    });
</script>

<script>
$(function(){
    $('#title1').mouseenter(function(){
      var back_topic = '#' + 'box_' + $(this).attr('id');
      $('#box_canvas1').show();
      });
    $('#title1').mouseenter(function(){
      window.setTimeout(function() {
        $('#title1').html("<h1>BLACK咖啡</h1><h3>正yee</h3>");
        }, 1000);
      });
    $('#title1').mouseout(function(){
      $(this).text("");
      });
    $('#title1').mouseout(function(){
      var back_topic = '#' + $(this).attr('class') + '_' + $(this).attr('id');
      $('#box_canvas1').hide();
      });
    });
</script>

